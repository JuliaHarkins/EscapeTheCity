<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_trail1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="none"
        android:text="Trail 1"
        app:layout_constraintBottom_toTopOf="@+id/txt_trail2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <EditText
        android:id="@+id/txt_trail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="none"
        android:text="Trail 2"
        app:layout_constraintBottom_toTopOf="@+id/txt_trail3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_trail1" />

    <EditText
        android:id="@+id/txt_trail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="387dp"
        android:ems="10"
        android:inputType="none"
        android:text="Trail 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_trail2" />

    <Button
        android:id="@+id/btn_trail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trail 1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="200dp" />

    <Button
        android:id="@+id/btn_trail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trail 2"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="273dp" />

    <Button
        android:id="@+id/btn_trail3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trail 3"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="342dp" />

</android.support.constraint.ConstraintLayout>